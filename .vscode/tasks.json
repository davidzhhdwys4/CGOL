{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build cgol-rust (wasm-pack)",
      "type": "shell",
      "command": "wasm-pack build --target web --out-dir pkg",
      "options": {
        "cwd": "${workspaceFolder}/cgol-rust"
      },
      "group": "build",
      "problemMatcher": ["$rustc"]
    },
    {
      "type": "npm",
      "script": "start",
      "options": {
        "cwd": "${workspaceFolder}/cgol-web",
      },
      "dependsOn": ["build cgol-rust (wasm-pack)"],
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    }
  ]
}